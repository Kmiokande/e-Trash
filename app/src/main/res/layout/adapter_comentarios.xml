<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:paddingBottom="8dp" android:paddingTop="8dp"
              android:paddingLeft="16dp" android:paddingRight="16dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagemFotoComentario"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/avatar"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center_vertical" android:layout_marginLeft="10dp">
            <TextView
                    android:text="@string/nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textNomeComentario" android:textSize="16sp"
                    android:textStyle="bold" android:autoText="false" android:elegantTextHeight="false"
                    android:textAllCaps="true"/>
            <TextView
                    android:text="@string/comentarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textComentario"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/divisor"/>
</LinearLayout>