<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".fragment.PerfilFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="411dp"
            android:layout_height="731dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold" android:id="@+id/textView"
    />
    <ImageView
            android:src="@drawable/avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/avatar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="@+id/textView" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="EDITAR PERFIL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_editar_perfil"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/nomePerfil" app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:layout_width="301dp"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/nomePerfil"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/avatar"/>

</android.support.constraint.ConstraintLayout>