<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Nome do local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nomeLocal" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:freezesText="false" android:textSize="18sp"
            android:textAllCaps="true"/>
    <TextView
            android:text="@string/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_latitude"
            app:layout_constraintTop_toBottomOf="@+id/tv_nomeLocal"
            app:layout_constraintStart_toStartOf="@+id/tv_nomeLocal" android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="@string/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_longitude"
            app:layout_constraintTop_toBottomOf="@+id/tv_latitude"
            app:layout_constraintStart_toStartOf="@+id/tv_nomeLocal" android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"/>
    <ImageView
            android:layout_width="39dp"
            android:layout_height="32dp" app:srcCompat="@drawable/ic_delete_24dp"
            android:id="@+id/imageView2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="00000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_latitudeLocalColeta"
            app:layout_constraintStart_toStartOf="@+id/tv_longitudeLocalColeta"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/tv_nomeLocal"/>
    <TextView
            android:text="00000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_longitudeLocalColeta"
            app:layout_constraintStart_toEndOf="@+id/tv_longitude"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_latitudeLocalColeta"
            android:layout_marginTop="4dp"/>
</android.support.constraint.ConstraintLayout>