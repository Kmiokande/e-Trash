<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ComentatiosActivity" android:orientation="vertical" android:padding="5dp">

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/recyclerComentarios"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="10dp"
            android:background="@drawable/background_caixa_comentario">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editComentatio" android:layout_weight="1" android:hint="@string/fazer_pergunta"
                android:background="@android:color/transparent" android:paddingBottom="5dp" android:paddingTop="5dp"
                android:paddingLeft="15dp" android:paddingRight="15dp"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp" android:id="@+id/button"
                android:background="@drawable/ic_send_24dp" android:onClick="salvarComentario"/>
    </LinearLayout>
</LinearLayout>